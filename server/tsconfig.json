{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@routers/*": [
        "./routers/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
    },
    "moduleResolution": "Node",
  }
}