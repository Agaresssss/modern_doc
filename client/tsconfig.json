{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@firebase": [
        "src/firebase/index"
      ],
      "@mvvm": [
        "src/mvvm/*"
      ],
    }
  },
  "include": [
    "src",
    "jest.config.js"
  ],
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}